version: "3"

services:
  mysql:
    image: mysql:5.7
    container_name: mysql
    environment:
      MYSQL_DATABASE: pos-api
      MYSQL_USER: user
      MYSQL_PASSWORD: {{vars.vars.mysql_user_password}}
      MYSQL_ROOT_PASSWORD: {{vars.vars.mysql_root_password}}
    ports:
      - "3306:3306"
    volumes:
      - "mysql:/var/lib/mysql"
    restart: always
volumes:
  mysql: null